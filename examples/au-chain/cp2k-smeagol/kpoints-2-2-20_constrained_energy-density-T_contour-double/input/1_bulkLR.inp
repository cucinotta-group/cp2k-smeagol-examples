&GLOBAL
   PROJECT              bulk
   RUN_TYPE             energy
   PRINT_LEVEL          medium
   EXTENDED_FFT_LENGTHS .true.
&END GLOBAL

&FORCE_EVAL
   METHOD Quickstep

   &DFT
      BASIS_SET_FILE_NAME BASIS_MOLOPT
      POTENTIAL_FILE_NAME GTH_POTENTIALS

      &SMEAGOL
         PROJECT_NAME   bulk
         BulkTransport  T
         BulkLead       LR
      &END SMEAGOL

      &MGRID
         CUTOFF 400
      &END MGRID

      &SCF
         MAX_SCF   100
         EPS_SCF   1e-8
         SCF_GUESS atomic
         ADDED_MOS 100

         &SMEAR
            ELECTRONIC_TEMPERATURE [K] 293
            METHOD fermi_dirac
         &END SMEAR

         &MIXING
            ALPHA   0.3
            METHOD  broyden_mixing
            NBUFFER 8
         &END MIXING

         &PRINT
            &RESTART
               FILENAME RESTART_0
            &END RESTART
         &END PRINT
      &END SCF

      &POISSON
         PERIODIC xyz
      &END POISSON

      &XC
         &XC_FUNCTIONAL pade
         &END XC_FUNCTIONAL
      &END XC

      &KPOINTS
         SCHEME  MONKHORST-PACK  KPOINTS_REPLACE
         SYMMETRY OFF
         EPS_GEO 1.e-8
         FULL_GRID ON
         VERBOSE T
         # -1 -- smallest possible number of processes per group; 0 -- all processes, > 0 -- this number of processes
         PARALLEL_GROUP_SIZE  -1
      &END KPOINTS
   &END DFT

   &SUBSYS

      &CELL
        ABC   8.4 8.4 8.4
        PERIODIC xyz
      &END CELL

      &TOPOLOGY
 &CENTER_COORDINATES
         &END CENTER_COORDINATES
        COORD_FILE_NAME bulk.xyz
        COORD_FILE_FORMAT  XYZ
      &END TOPOLOGY

      &KIND Au
         BASIS_SET SZV-MOLOPT-SR-GTH
         POTENTIAL GTH-PADE-q11
      &END KIND
   &END SUBSYS
&END FORCE_EVAL

