&GLOBAL
   PROJECT_NAME molecule
   RUN_TYPE  ENERGY
 &END GLOBAL
 &MOTION
   &GEO_OPT
     OPTIMIZER  BFGS
     MAX_ITER  1000
     STEP_START_VAL  0
   &END GEO_OPT
   &PRINT
     &TRAJECTORY  ON
       FORMAT  XMOL
     &END TRAJECTORY
   &END PRINT
 &END MOTION
 &FORCE_EVAL
   METHOD  QS
   &DFT
     BASIS_SET_FILE_NAME BASIS_ADMM
     BASIS_SET_FILE_NAME BASIS_MOLOPT
     POTENTIAL_FILE_NAME GTH_POTENTIALS
     UKS  T
     CHARGE  0
     &SCF
       MAX_SCF  40
       EPS_SCF     1.0000000000000003E-07
       SCF_GUESS  ATOMIC
       &OT  T
         MINIMIZER  DIIS
         PRECONDITIONER  FULL_SINGLE_INVERSE
       &END OT
       &OUTER_SCF  T
         EPS_SCF     1.0000000000000003E-07
         MAX_SCF  60
       &END OUTER_SCF
     &END SCF
     &QS
      EPS_DEFAULT 1.0e-14
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 3 
    &END QS
     &MGRID
     NGRIDS 5
       CUTOFF     600
       REL_CUTOFF 50
     &END MGRID
      &XC
      &XC_FUNCTIONAL pbe
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
         POTENTIAL_TYPE  PAIR_POTENTIAL
         &PAIR_POTENTIAL
           TYPE  DFTD3
           PARAMETER_FILE_NAME dftd3.dat
           REFERENCE_FUNCTIONAL PBE
         &END PAIR_POTENTIAL
       &END VDW_POTENTIAL
    &END XC
    
     &PRINT
       &MO_CUBES ON     
        NHOMO 1
        NLUMO 1
       &END MO_CUBES
       &E_DENSITY_CUBE  ON
       &END E_DENSITY_CUBE
    &HIRSHFELD
    SHAPE_FUNCTION  DENSITY
    &END HIRSHFELD
     &END PRINT
   &END DFT
   
   &SUBSYS
    &CELL
         ABC                    15 15 15
         ALPHA_BETA_GAMMA       90 90 90
         #PERIODIC               NONE
        &END CELL
     
     &KIND C
       BASIS_SET DZVP-MOLOPT-SR-GTH
       ELEMENT C
       POTENTIAL GTH-PBE-q4
     &END KIND
	 
     &KIND S
       BASIS_SET DZVP-MOLOPT-SR-GTH
       ELEMENT S
       POTENTIAL GTH-PBE-q6
     &END KIND
     
     &KIND H
       BASIS_SET DZVP-MOLOPT-SR-GTH
       ELEMENT H
       POTENTIAL GTH-PBE-q1
     &END KIND
     
     &TOPOLOGY
     &CENTER_COORDINATES
      &END CENTER_COORDINATES
       COORD_FILE_NAME input.xyz
       COORD_FILE_FORMAT  XYZ
       NUMBER_OF_ATOMS  14
     &END TOPOLOGY
   &END SUBSYS
 &END FORCE_EVAL
