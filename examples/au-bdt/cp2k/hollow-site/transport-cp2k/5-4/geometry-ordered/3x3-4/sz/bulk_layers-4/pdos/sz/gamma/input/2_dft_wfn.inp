&GLOBAL
   PROJECT              dft_wfn
   RUN_TYPE             energy
   PRINT_LEVEL          medium
   EXTENDED_FFT_LENGTHS .true.
&END GLOBAL

&FORCE_EVAL
   METHOD Quickstep

   &DFT
      BASIS_SET_FILE_NAME BASIS_MOLOPT
      POTENTIAL_FILE_NAME GTH_POTENTIALS

      &MGRID
         CUTOFF 400
      &END MGRID

      &SCF
         MAX_SCF   100
         EPS_SCF   1e-7
         SCF_GUESS atomic
         ADDED_MOS 100

         &SMEAR
            ELECTRONIC_TEMPERATURE [K] 293
            METHOD fermi_dirac
         &END SMEAR

         &MIXING
            ALPHA   0.3
            METHOD  broyden_mixing
            NBUFFER 8
         &END MIXING

         &PRINT
            &RESTART
               FILENAME RESTART_0
            &END RESTART
         &END PRINT
      &END SCF

      &POISSON
         PERIODIC xyz
      &END POISSON

      &XC
         &XC_FUNCTIONAL pade
         &END XC_FUNCTIONAL
      &END XC

   &PRINT
        &V_HARTREE_CUBE
        STRIDE  1 1 1
        &END  V_HARTREE_CUBE
      &E_DENSITY_CUBE  ON
        STRIDE 1 1 1
      &END E_DENSITY_CUBE
      &HIRSHFELD
    SHAPE_FUNCTION  DENSITY
    &END HIRSHFELD
	&PDOS
            # print all projected DOS available:
            NLUMO -1
            # split the density by quantum number:
            COMPONENTS
         &END
    &END PRINT
&END DFT

   &SUBSYS
      &CELL
        ABC     8.336 8.336 33.926
        PERIODIC xyz
      &END CELL

      &TOPOLOGY
        COORD_FILE_NAME em.xyz
        COORD_FILE_FORMAT  XYZ
      &END TOPOLOGY

      &KIND Au
         BASIS_SET SZV-MOLOPT-SR-GTH
         POTENTIAL GTH-PADE-q11
      &END KIND
	  
     
      &KIND C
        BASIS_SET SZV-MOLOPT-SR-GTH
        ELEMENT C
        POTENTIAL GTH-PADE-q4
      &END KIND
	 
      &KIND S
        BASIS_SET SZV-MOLOPT-SR-GTH
        ELEMENT S
        POTENTIAL GTH-PADE-q6
      &END KIND
     
      &KIND H
        BASIS_SET SZV-MOLOPT-SR-GTH
        ELEMENT H
        POTENTIAL GTH-PADE-q1
      &END KIND
	  
   &END SUBSYS
&END FORCE_EVAL

