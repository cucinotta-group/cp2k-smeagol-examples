                                atoms Au O
                                EPSILON [kjmol]  3.61
                                SIGMA   [angstrom] 2.833057924
                                RCUT    [angstrom] 12
                        &END LENNARD-JONES
                        &LENNARD-JONES
                                atoms Au H
                                EPSILON [kjmol]  0.01
                                SIGMA   [angstrom] 3.519049937
                                RCUT    [angstrom] 12
                        &END LENNARD-JONES
		&END NONBONDED
		&SPLINE
     			#EMAX_SPLINE 30000000000
			UNIQUE_SPLINE .TRUE.
			EMAX_ACCURACY 0.001
			#R0_NB 0.05
    		&END SPLINE
		IGNORE_MISSING_CRITICAL_PARAMS .TRUE.
    		&END FORCEFIELD
    		&POISSON
      			&EWALD
        			EWALD_TYPE spme
        			ALPHA .3
        			GMAX 18 16 31
      			&END EWALD
		&END POISSON
	&END MM
&SUBSYS
	&CELL
		A	17.811878396732904 0 0
		B	0 15.425539180689931 0
		C 	0 0 30.226752151153690
		MULTIPLE_UNIT_CELL 1 1 1
		PERIODIC XYZ   
		SYMMETRY ORTHORHOMBIC    
	&END CELL
     &TOPOLOGY
       MULTIPLE_UNIT_CELL 1 1 1
	COORD_FILE_FORMAT xyz
	COORD_FILE_NAME coord.xyz
	&GENERATE
	# BONDLENGTH_MAX 2
	 CREATE_MOLECULES .TRUE.
	 BONDPARM_FACTOR 0.7
	&END GENERATE
     &END TOPOLOGY
	&PRINT
	&MOLECULES ON
	&END MOLECULES
	&END PRINT
&END SUBSYS
&END FORCE_EVAL
