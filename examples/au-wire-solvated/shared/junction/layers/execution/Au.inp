# calculation a restart or not ?
@SET SCF_RESTART 		LT_RSCF
@SET RESTART 			FALSE
@SET WAVEFILE 			Au_slab-RESTART.kp
@SET RESTARTFILE 		Au_slab-1.restart

# traditional
@SET BASISFILE 			/rds/general/user/jj1921/home/BASIS_COM_MOLOPT_GTH
@SET PSEUDOFILE 		/rds/general/user/jj1921/home/GTH_POTENTIALS
@SET CUTOFF 			LT_cutoff
@SET RELCUTOFF			40
@SET Kx				K_x
@SET Ky				K_y
@SET Kz				K_z
@SET BASIS_Au			LT_basis_set
@SET CELL_A			LT_A
@SET CELL_B			LT_B
@SET CELL_C			LT_C
   
# SCF
@SET SCF_CONV 			1E-7
@SET SCF_NCYCLES		500
@IF ( ${SCF_RESTART} == TRUE )
@SET SCF_GUESS			RESTART 
@ENDIF
@IF ( ${SCF_RESTART} == FALSE ) 
@SET SCF_GUESS			ATOMIC
@ENDIF
@SET FUNCTIONAL 		PBE

# global parameters
@SET SYSNAME 			Au_slab
@SET RTYPE			LT_RTYPE 

# The mandatory GLOBAL section 
&GLOBAL
PROJECT 			${SYSNAME} 
RUN_TYPE 			${RTYPE} 
PRINT_LEVEL 			MEDIUM 
&END GLOBAL

# The optional EXT_RESTART section include file 
@IF ( ${RESTART} == TRUE )
  @INCLUDE 			'restart.inc'
@ENDIF

#The mandatory FORCE_EVAL section include file 
@INCLUDE 			'forces.inc'

#The optional MOTION section include file
@IF ( ${RTYPE} /= ENERGY )
  @INCLUDE 			'LT_motion'
@ENDIF
