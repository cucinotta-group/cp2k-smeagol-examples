&GLOBAL
   PROJECT              2_dft_wfn
   RUN_TYPE             MD
   PRINT_LEVEL          medium
   EXTENDED_FFT_LENGTHS .true.
   PREFERRED_DIAG_LIBRARY SL
   #WALLTIME 00:18:00
   WALLTIME 23:30:00
   #WALLTIME 47:50:00
&END GLOBAL

&MOTION
        &MD
                ENSEMBLE        NVT
        &THERMOSTAT
                TYPE    CSVR
          &CSVR
             TIMECON 1
          &END CSVR
        &END THERMOSTAT
                STEPS   100000
                TIMESTEP        0.5
                TEMPERATURE     300
        &END MD
        &CONSTRAINT
                &FIXED_ATOMS
                LIST 1..432, 943..1338 
                &END FIXED_ATOMS
        &END CONSTRAINT
        &PRINT
     &RESTART  ON
     &EACH
         MD  1
       &END EACH
     &END RESTART
     &TRAJECTORY  ON
       &EACH
         MD  1
       &END EACH
       UNIT angstrom
       FORMAT  XMOL
       PRINT_ATOM_KIND TRUE
     &END TRAJECTORY
     &FORCES  SILENT
       &EACH
         MD  1
       &END EACH
       FORMAT  XMOL
       PRINT_ATOM_KIND TRUE
     &END FORCES
     &VELOCITIES     ON
       &EACH
         MD  1
       &END EACH
       FORMAT  XMOL
       PRINT_ATOM_KIND TRUE
     &END VELOCITIES
        &END PRINT
&END MOTION

&FORCE_EVAL
 
  &PRINT
      &FORCES
      &END FORCES
   &END PRINT

   METHOD Quickstep

   &DFT
      BASIS_SET_FILE_NAME BASIS_MOLOPT
      BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
      BASIS_SET_FILE_NAME GTH_BASIS_SETS
      POTENTIAL_FILE_NAME GTH_POTENTIALS
      BASIS_SET_FILE_NAME BASIS_CUSTOM
    
     #WFN_RESTART_FILE_NAME dft_wfn-RESTART_0.kp

     &QS
       EXTRAPOLATION  ASPC
     &END QS
      
      &MGRID
         CUTOFF 500
         NGRIDS 5
      &END MGRID

      &SCF
         MAX_SCF   200
         EPS_SCF   1e-7
         SCF_GUESS restart
         ADDED_MOS 1000

         &SMEAR
            ELECTRONIC_TEMPERATURE [K] 300
            METHOD fermi_dirac
         &END SMEAR

         &MIXING
            ALPHA   0.3
            METHOD  broyden_mixing
            NBUFFER 8
         &END MIXING

         &PRINT
            &RESTART
               FILENAME ""
            &END RESTART
         &END PRINT
      &END SCF

    &PRINT
      &V_HARTREE_CUBE
         &EACH
            MD  20
         &END EACH
        STRIDE  1 1 1
        &END  V_HARTREE_CUBE
      &E_DENSITY_CUBE  ON
          &EACH
         MD  20
       &END EACH
        STRIDE 1 1 1
      &END E_DENSITY_CUBE
    &HIRSHFELD
      FILENAME charges
    SHAPE_FUNCTION  DENSITY
    &END HIRSHFELD
    &END PRINT

      &POISSON
         POISSON_SOLVER periodic
         PERIODIC xyz
      &END POISSON

        &XC
       DENSITY_CUTOFF     1.0000000000000000E-10
       GRADIENT_CUTOFF     1.0000000000000000E-10
       TAU_CUTOFF     1.0000000000000000E-10
       &XC_FUNCTIONAL  NO_SHORTCUT
         &PBE  T
         &END PBE
       &END XC_FUNCTIONAL
       &VDW_POTENTIAL
         POTENTIAL_TYPE  PAIR_POTENTIAL
         &PAIR_POTENTIAL
           R_CUTOFF     8.0000000000000000E+00
           TYPE  DFTD3
           PARAMETER_FILE_NAME dftd3.dat
           REFERENCE_FUNCTIONAL PBE
           EPS_CN     1.0000000000000000E-02
           CALCULATE_C9_TERM  T
           REFERENCE_C9_TERM  T
           LONG_RANGE_CORRECTION  T
         &END PAIR_POTENTIAL
       &END VDW_POTENTIAL
     &END XC

&END DFT

   &SUBSYS

      &CELL
         ABC     17.8118 15.4255 73.8568
         PERIODIC xyz
      &END CELL

      &TOPOLOGY
# &CENTER_COORDINATES
#         &END CENTER_COORDINATES
        COORD_FILE_NAME em.xyz
        COORD_FILE_FORMAT  XYZ
      &END TOPOLOGY

        &KIND Au
         #BASIS_SET TZVP-MOLOPT-SR-GTH-q11
         BASIS_SET DZVP-MOLOPT-SR-GTH-q11
	 #BASIS_SET SZV-MOLOPT-SR-GTH-q11
         POTENTIAL GTH-PBE-q11
      &END KIND


        &KIND Au_lead
         #BASIS_SET TZVP-MOLOPT-SR-GTH-q11
         #BASIS_SET DZVP-MOLOPT-SR-GTH-q11
         #BASIS_SET SZV-MOLOPT-SR-GTH-q11
         #POTENTIAL GTH-PBE-q11
	 BASIS_SET SZV-CUSTOM-q1
         POTENTIAL GTH-PADE-q1
      &END KIND

        &KIND Au_screen
         ELEMENT Au
         BASIS_SET SZV-CUSTOM-q1
         POTENTIAL GTH-PADE-q1
      &END KIND

        &KIND Au_a
         #BASIS_SET TZVP-MOLOPT-SR-GTH-q11
         #BASIS_SET DZVP-MOLOPT-SR-GTH-q11
         BASIS_SET SZV-MOLOPT-SR-GTH-q11
         POTENTIAL GTH-PBE-q11
      &END KIND
   
        &KIND Au_bl
         #BASIS_SET TZVP-MOLOPT-SR-GTH-q11
         #BASIS_SET DZVP-MOLOPT-SR-GTH-q11
         BASIS_SET SZV-MOLOPT-SR-GTH-q11
         POTENTIAL GTH-PBE-q11
      &END KIND
         
        &KIND Au_cl
         #BASIS_SET TZVP-MOLOPT-SR-GTH-q11
         BASIS_SET DZVP-MOLOPT-SR-GTH-q11
         #BASIS_SET SZV-MOLOPT-SR-GTH-q11
         POTENTIAL GTH-PBE-q11
      &END KIND
         
        &KIND Au_br
         #BASIS_SET TZVP-MOLOPT-SR-GTH-q11
         BASIS_SET DZVP-MOLOPT-SR-GTH-q11
         #BASIS_SET SZV-MOLOPT-SR-GTH-q11
         POTENTIAL GTH-PBE-q11
      &END KIND

        &KIND Au_cr
         #BASIS_SET TZVP-MOLOPT-SR-GTH-q11
         #BASIS_SET DZVP-MOLOPT-SR-GTH-q11
         BASIS_SET SZV-MOLOPT-SR-GTH-q11
         POTENTIAL GTH-PBE-q11
      &END KIND
         
        &KIND Au_wire
         #BASIS_SET TZVP-MOLOPT-SR-GTH-q11
         BASIS_SET DZVP-MOLOPT-SR-GTH-q11
         #BASIS_SET SZV-MOLOPT-SR-GTH-q11
         POTENTIAL GTH-PBE-q11
      &END KIND

      &KIND  O
       ELEMENT O
       #BASIS_SET TZVP-GTH
       BASIS_SET DZVP-GTH
       #BASIS_SET DZVP-MOLOPT-GTH-q6
       #BASIS_SET SZV-MOLOPT-GTH-q6
       POTENTIAL GTH-PBE-q6
     &END KIND
      
     &KIND  H
       ELEMENT H   
       #BASIS_SET TZVP-GTH
       BASIS_SET DZVP-GTH
       #BASIS_SET DZVP-MOLOPT-GTH-q1
       #BASIS_SET SZV-MOLOPT-GTH-q1
       POTENTIAL GTH-PBE-q1
     &END KIND

   &END SUBSYS
&END FORCE_EVAL
